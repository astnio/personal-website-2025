---
import { Picture } from 'astro:assets';
import lightBgImage from '../assets/images/site/blog/pexels-eberhardgross.jpg';
import darkBgImage from '../assets/images/site/blog/pexels-therato.jpg';

const imageWidth = 2560;
const imageHeight = 2560;

const { imageLabel } = Astro.props;
---

<style>
  .bg-padding-wrapper {
    width: 100%;
  }

  .blog-background-wrapper {
    position: relative;

    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;
    height: 25rem;

    z-index: -1;

    overflow: hidden;

    border-radius: var(--radius-surface);
  }

  /*** Blog Image  ***/

  .themed-background-wrapper {
    position: absolute;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .picture-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .blog-bg-image {
    position: relative;
    top: 0;
    left: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;
    max-height: 34rem;

    overflow: hidden;

    object-fit: cover;
  }

  .blog-bg-img-dark,
  .blog-bg-img-light {
    isolation: isolate;

    opacity: 1;
    display: flex;

    overflow: hidden;

    transition-property: opacity, visibility;
    transition-duration: 0.3s;
    transition-timing-function: ease-out;
  }

  .image-color-filter-overlay {
    content: '';

    position: absolute;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    z-index: 1;
  }

  .color-filter-dark {
    background-color: var(--clr-overlay-2);
    opacity: 80%;
    mix-blend-mode: color;
  }

  .color-filter-light {
    background-color: var(--clr-base);
    opacity: 40%;
    mix-blend-mode: lighten;
  }

  .blog-bg-img-dark[data-active='true'] {
    visibility: visible;
    opacity: 1;
  }

  .blog-bg-img-dark[data-active='false'] {
    visibility: hidden;
    opacity: 0;
  }

  .blog-bg-img-light[data-active='true'] {
    visibility: visible;

    opacity: 1;
  }

  .blog-bg-img-light[data-active='false'] {
    visibility: hidden;

    opacity: 0;
  }

  .image-label {
    position: relative;

    display: flex;
    align-items: center;

    padding-left: 1rem;

    width: 100%;
    height: 100%;

    font-size: 4rem;
    font-weight: 700;

    z-index: 10;
  }

  .image-label::before {
    content: '';

    position: absolute;
    left: 0;
    top: 0;

    width: 100%;
    height: 100%;

    background-color: var(--clr-crust);

    opacity: 0.6;

    z-index: -1;
  }

  @media screen and (min-width: 768px) {
    .bg-padding-wrapper {
      padding-inline: 1rem;
    }

    .themed-background-wrapper {
      margin: 0;

      height: fit-content;
      max-height: 60vh;
    }

    .blog-bg-image {
      min-width: 100%;
      height: auto;
      max-height: 100%;
    }
  }
</style>

<div class='max-width bg-padding-wrapper'>
  <div class='blog-background-wrapper'>
    {imageLabel && <p class='image-label'>{imageLabel}</p>}
    <div
      data-active='true'
      class='themed-background-wrapper blog-bg-img-dark'>
      <div class='picture-wrapper'>
        <div class='image-color-filter-overlay color-filter-dark'></div>
        <Picture
          formats={['avif', 'webp', 'jpg']}
          src={darkBgImage}
          alt='Landscape'
          class='blog-bg-image'
          decoding='async'
          loading='lazy'
          width={imageWidth}
          height={imageHeight}
        />
      </div>
    </div>

    <div
      data-active='false'
      class='themed-background-wrapper blog-bg-img-light'>
      <div class='picture-wrapper'>
        <div class='image-color-filter-overlay color-filter-light'></div>
        <Picture
          formats={['avif', 'webp', 'jpg']}
          src={lightBgImage}
          alt='Landscape'
          class='blog-bg-image'
          decoding='async'
          loading='lazy'
          width={imageWidth}
          height={imageHeight}
        />
      </div>
    </div>
  </div>
</div>
