---
const { credit } = Astro.props;
---

<style>
  li.credit-list-item {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: start;
    gap: 0.8rem;

    padding-block: 0.8rem;
    padding-inline: 1.4rem;

    margin: 0;

    border-radius: var(--radius-base);
    border: 1px solid var(--clr-surface-0);

    background-color: var(--clr-mantle);

    width: 100%;
  }

  h3.credit-list-item-title {
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--clr-subtext-1);

    margin: 0;
    margin-bottom: -0.6rem;
    padding: 0;
  }

  a.credit-list-item-link {
    text-decoration: none;
    color: var(--clr-primary);
    font-weight: 600;
    font-size: 1.2rem;

    padding: 0;
    margin: 0;

    transition-property: filter;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
  }

  a.credit-list-item-link:hover {
    filter: brightness(120%);
  }
</style>

<li class='credit-list-item'>
  <h3 class='credit-list-item-title'>{credit.use}</h3>
  <a
    class='credit-list-item-link'
    href={credit.url}
    target='_blank'>
    <span>{credit.name}</span>
  </a>
</li>
