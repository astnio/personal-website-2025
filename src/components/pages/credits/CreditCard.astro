---
import type { SourceCredit } from '@/types';
import CreditCardItem from './CreditCardItem.astro';

const { categoryName, creditItems } = Astro.props;

function getCategoryIcon(name: string) {
  switch (name) {
    case 'development':
      return `ri-flashlight-fill`;
      break;
    case 'design':
      return 'ri-palette-fill';
      break;
    case 'photography':
      return 'ri-camera-fill';
      break;
    case 'typography':
      return 'ri-text-snippet';
      break;
    default:
      return 'ri-question-fill';
      break;
  }
}
---

<style>
  .credits-card-wrapper {
    display: flex;
    flex-direction: column;

    width: 100%;

    background-color: var(--clr-base);

    padding: 1rem;

    margin-bottom: 4rem;

    border-radius: var(--radius-surface);
    outline: 1px solid var(--clr-surface-0);
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--clr-text);
    margin-top: 2rem;
    margin-bottom: 1rem;
    text-transform: capitalize;
  }

  ul.credits-list {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: start;
    flex-wrap: wrap;
    gap: 0.8rem;

    list-style-type: none;

    padding: 0;
  }
</style>

<div class='credits-card-wrapper box-shadow-3'>
  <h2 class='category-title'>
    <span class={getCategoryIcon(categoryName)}></span>
    <span>{categoryName}</span>
  </h2>
  <ul class='credits-list'>
    {
      creditItems.map((credit: SourceCredit) => (
        <CreditCardItem credit={credit} />
      ))
    }
  </ul>
</div>
