---
import type { SourceCredit } from '@/types';
import CreditCardItem from './CreditCardItem.astro';

const { categoryName, iconClass, creditItems } = Astro.props;
---

<style>
  .credits-card-wrapper {
    display: flex;
    flex-direction: column;

    width: 100%;

    background-color: var(--clr-base);

    padding: 1rem;

    margin-bottom: 4rem;

    border-radius: var(--radius-surface);
    outline: 1px solid var(--clr-surface-0);
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--clr-text);
    margin-top: 1rem;
    margin-bottom: 0.4rem;
    text-transform: capitalize;
  }

  ul.credits-list {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: start;
    flex-wrap: wrap;
    gap: 0.8rem;

    list-style-type: none;

    padding: 0;
  }

  hr.hr-short {
    display: flex;

    border-radius: var(--radius-pill);

    background-color: var(--clr-primary);

    height: 0.25rem;

    min-width: auto;
    width: 100%;
    max-width: 5rem;

    margin: 0;
    margin-left: 0.15rem; /* just to help align it with the title */
  }
</style>

<div class='credits-card-wrapper box-shadow-3'>
  <h2 class='category-title'>
    <span class={iconClass}></span>
    <span>{categoryName}</span>
  </h2>
  <hr class='hr-short' />
  <ul class='credits-list'>
    {
      creditItems.map((credit: SourceCredit) => (
        <CreditCardItem credit={credit} />
      ))
    }
  </ul>
</div>
