---
import type { ImageMetadata } from 'astro';
import ProjectGalleryImage from './ProjectGalleryImage.astro';

interface ImageProps {
  src: ImageMetadata;
  alt: string;
}

interface Props {
  images: ImageProps[];
}

const { images } = Astro.props;
---

<style>
  .image-gallery-wrapper {
    position: relative;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;

    padding: 1rem;

    height: 35rem;

    overflow: hidden;
  }

  .btn-nav-img-wrapper {
    position: absolute;
    top: 50%;

    z-index: 1;

    font-size: 2rem;
  }

  .btn-nav-left-wrapper {
    left: 1rem;
  }

  .btn-nav-right-wrapper {
    right: 1rem;
  }

  .btn-nav-img {
    display: flex;
    align-items: center;
    justify-content: center;

    height: 3rem;
    width: 3rem;

    background-color: var(--clr-base);

    border: none;
    border-radius: var(--radius-circle);
    outline: 2px solid var(--clr-surface-1);

    color: var(--clr-text);
    font-size: 2.4rem;

    cursor: pointer;

    transition-property: outline, background-color, color;
    transition-duration: 0.15s;
    transition-timing-function: ease-in-out;
  }

  .btn-nav-img:hover {
    background-color: var(--clr-surface-0);
    outline: 2px solid var(--clr-surface-2);
    color: var(--clr-primary);
  }

  .images-wrapper {
    /* position: relative; */
  }
</style>

<div class='image-gallery-wrapper'>
  <div class='btn-nav-img-wrapper btn-nav-left-wrapper'>
    <button
      id='btn-previous-img'
      class='btn-nav-img btn-nav-left'
      title='Previous Image'
      ><span class='bx bx-chevron-left'></span><span class='visually-hidden'
        >Previous Image</span
      ></button
    >
  </div>

  <div class='btn-nav-img-wrapper btn-nav-right-wrapper'>
    <button
      id='btn-next-img'
      class='btn-nav-img btn-nav-right'
      title='Next Image'
      ><span class='bx bx-chevron-right'></span><span class='visually-hidden'
        >Next Image</span
      ></button
    >
  </div>
  <div class='images-wrapper'>
    {
      images.map((image, index) => (
        <ProjectGalleryImage
          image={image}
          active={false}
          id={`project-image-${index}`}
        />
      ))
    }
  </div>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    const btnPrev = document.getElementById('btn-previous-img');
    const btnNext = document.getElementById('btn-next-img');

    const projectImages: HTMLElement =
      document.querySelector('.images-wrapper')!;

    let currentIndex = 0;

    projectImages.firstElementChild!.setAttribute('data-active', 'true');

    btnNext?.addEventListener('click', () => {
      projectImages.children[currentIndex].setAttribute('data-active', 'false');

      currentIndex++;

      if (currentIndex >= projectImages.children.length) {
        currentIndex = 0;
      }

      projectImages.children[currentIndex].setAttribute('data-active', 'true');
    });

    btnPrev?.addEventListener('click', () => {
      projectImages.children[currentIndex].setAttribute('data-active', 'false');

      currentIndex--;

      if (currentIndex <= 0) {
        currentIndex = projectImages.children.length - 1;
      }

      projectImages.children[currentIndex].setAttribute('data-active', 'true');
    });
  });
</script>
