---
import type { ImageMetadata } from 'astro';
import ProjectGalleryImage from './ProjectGalleryImage.astro';

interface ImageProps {
  src: ImageMetadata;
  alt: string;
}

interface Props {
  images: ImageProps[];
}

const { images } = Astro.props;
---

<style>
  .images-wrapper {
    position: relative;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;

    padding: 1rem;

    height: 35rem;

    overflow: hidden;
  }
</style>

<div class='images-wrapper'>
  {
    images.map((image, index) => (
      <ProjectGalleryImage
        image={image}
        active={false}
        id={`project-image-${index}`}
      />
    ))
  }
</div>

<script>
  //todo: fix this on navigating away from page.
  //it is supposed to just make the first element be enabled
  //but none of them do when navigating away and back again
  const projectImages: HTMLElement = document.querySelector('.images-wrapper')!;
  projectImages.firstElementChild!.setAttribute('data-active', 'true');
</script>
