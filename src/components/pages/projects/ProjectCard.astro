---
import { Picture } from 'astro:assets';
import Chip from '@/components/interface/Chip.astro';
import DateLabel from '@components/interface/DateLabel.astro';
import Heading from '@components/typography/Heading.astro';
import Status from '@components/pages/projects/Status.astro';
import { getIcon } from '@scripts/utils/iconHelper';

const { url, data } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/content/projects/**/*.{png,jpg,jpeg,gif,webp}'
);

let imageSource: ImageMetadata | null = null;

if (data.image_source) {
  const projectSlug = url.split('/').pop();
  const fullPath = `/src/content/projects/${projectSlug}/${data.image_source.replace('./', '')}`;
  const imageModule = await images[fullPath]();
  imageSource = imageModule.default;
} else {
  imageSource = null;
}
---

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin: 0;
  }

  .project-card {
    isolation: isolate;
    display: flex;
    flex-direction: column;

    width: 100%;
    height: 100%;

    background-color: var(--clr-base);

    border-radius: var(--radius-surface);

    outline: 1px solid var(--clr-surface-0);

    overflow: hidden;

    /* box-shadow: 6px 12px 16px rgba(0, 0, 0, 0.1); */
  }

  .project-info-wrapper {
    display: flex;
    flex-direction: column;
    align-items: start;
    flex: 1;

    gap: 1rem;

    padding-inline: 1rem;
    padding-bottom: 1rem;
    padding-top: 0.5rem;

    height: 100%;
  }

  .picture-wrapper {
    isolation: isolate;

    position: relative;

    display: flex;
    align-items: center;
    justify-content: center;

    aspect-ratio: 2 / 1;

    overflow: hidden;

    z-index: 1;

    /* border-bottom: 2px solid var(--clr-mantle); */
  }

  .status-wrapper {
    position: absolute;
    top: 0.5rem;
    right: 1rem;

    z-index: 1;
  }

  .project-image {
    position: absolute;
    left: 0;
    top: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    object-fit: cover;

    width: 100%;
    height: 100%;

    cursor: pointer;

    scale: 1.1;
    opacity: 0.8;
    filter: saturate(75%);

    object-position: bottom;

    transition-property: scale, opacity, filter;
    transition-duration: 0.25s;
    transition-timing-function: ease-out;
  }

  .project-image:hover {
    scale: 1.12;
    opacity: 1;
    filter: saturate(100%);
  }

  .project-title-wrapper {
    display: grid;
    grid-template-columns: auto auto;
    justify-content: space-between;
    align-items: start;
    gap: 1rem;

    width: 100%;

    padding-inline: 1rem;
    /* padding-block: 1.5rem; */
    padding-top: 1rem;

    z-index: 1;

    backdrop-filter: blur(5px);

    /* border-top: 1px solid var(--clr-surface-0); */
  }

  .project-title-wrapper::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;

    width: 100%;
    height: 100%;

    background-color: var(--clr-base);
    opacity: 0.85;

    z-index: -1;
  }

  .card-description {
    line-height: 150%;
    margin-bottom: auto;

    padding-block: 1rem;
  }

  ul.tags-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.75rem 0.5rem;

    list-style: none;
    padding: 0;
    margin: 0;
    margin-bottom: 1rem;
  }

  ul.links-list {
    display: flex;
    flex-direction: row;
    /* flex-wrap: wrap; */
    gap: 1rem;

    list-style: none;

    padding: 0;
    margin-bottom: 1rem;

    width: 100%;
  }

  li.link-list-item {
    flex: 1;
  }

  a.link {
    position: relative;

    display: flex;
    align-items: center;
    justify-content: center;
    /* gap: 0.6rem; */

    color: var(--clr-text);
    text-decoration: none;

    border-radius: var(--radius-input);
    outline: 1px solid var(--clr-surface-1);

    background-color: var(--clr-surface-0);

    height: 2.4rem;

    overflow: hidden;

    transition-property: color, background-color, outline;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  a.link:hover {
    outline: 1px solid var(--clr-surface-2);
    color: var(--clr-primary);
    background-color: var(--clr-surface-1);
  }

  .link-label {
    margin-right: auto;
    padding-right: 2rem;
    padding-left: 1rem;
  }

  .link-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    margin-right: auto;

    aspect-ratio: 1;

    background-color: var(--clr-base);

    height: 100%;

    transition-property: background-color, color;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
  }

  a:hover > .link-icon-wrapper {
    background-color: var(--clr-surface-0);
    color: var(--clr-primary);
  }

  .link-icon {
    font-size: 1.4rem;
  }

  .tech-icon {
    position: relative;
    top: 1px;
  }
</style>

<div class='project-card'>
  {
    imageSource && (
      <div class='picture-wrapper'>
        <div class='status-wrapper'>
          <Status type={data.status}>{data.status}</Status>
        </div>

        <a href={url}>
          <Picture
            src={imageSource}
            widths={[400, 800]}
            sizes='(max-width: 800px) 100vw, 800px'
            alt={data.title}
            class='project-image'
          />
        </a>
      </div>
    )
  }
  <div class='project-title-wrapper'>
    <Heading
      level={3}
      size='l2x'
      url={url}>
      {data.title}
    </Heading>
    <!-- <Status type={data.status}>{data.status}</Status> -->
    <DateLabel date={data.date_completed} />
  </div>
  <div class='project-info-wrapper'>
    <p class='card-description'>{data.description}</p>
    <ul class='tags-list'>
      {
        data.tags.map((tag: string) => (
          <li class='tags-list-item'>
            <Chip
              url={`/projects/tags/${tag}`}
              size='sm'>
              <span class={`tech-icon ${getIcon(tag)}`} />
              <span>{tag}</span>
            </Chip>
          </li>
        ))
      }
    </ul>
    <ul class='links-list'>
      {
        data.github_url && (
          <li class='link-list-item'>
            <a
              class='link'
              href={data.github_url}
              target='_blank'>
              <div class='link-icon-wrapper'>
                <span class='link-icon bx bxl-github' />
              </div>
              <span class='link-label'>Github</span>
            </a>
          </li>
        )
      }
      {
        data.demo_url && (
          <li class='link-list-item'>
            <a
              class='link'
              href={data.demo_url}
              target='_blank'>
              <div class='link-icon-wrapper'>
                <span class='link-icon bx bxs-show' />
              </div>
              <span class='link-label'>Demo</span>
            </a>
          </li>
        )
      }
      {
        data.fem_url && (
          <li class='link-list-item'>
            <a
              class='link'
              href={data.fem_url}
              target='_blank'>
              <div class='link-icon-wrapper'>
                <span class='link-icon bx bxs-trophy' />
              </div>
              <span class='link-label'>Challenge</span>
            </a>
          </li>
        )
      }
    </ul>
  </div>
</div>
