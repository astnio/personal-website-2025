---
import { Picture } from 'astro:assets';
import Chip from '@/components/interface/Chip.astro';
import DateLabel from '@components/interface/DateLabel.astro';
import Heading from '@components/typography/Heading.astro';
import StatusDot from '@components/pages/projects/StatusDot.astro';
import { getIcon } from '@scripts/utils/iconHelper';
import ReadMoreLink from '../blog/ReadMoreLink.astro';

const { url, data } = Astro.props;
---

<style>
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin: 0;
  }

  .project-card {
    isolation: isolate;
    display: flex;
    flex-direction: column;

    width: 100%;
    height: 100%;

    background-color: var(--clr-base);

    border-radius: var(--radius-surface);

    outline: 1px solid var(--clr-surface-0);

    overflow: hidden;

    /* box-shadow: 6px 12px 16px rgba(0, 0, 0, 0.1); */
  }

  .project-info-wrapper {
    display: flex;
    flex-direction: column;
    align-items: start;
    flex: 1;

    gap: 1rem;

    padding-inline: 1rem;
    padding-bottom: 1rem;
    padding-top: 0.5rem;

    height: 100%;
  }

  .picture-wrapper {
    isolation: isolate;

    position: relative;

    display: flex;
    align-items: center;
    justify-content: center;

    aspect-ratio: 2 / 1;

    overflow: hidden;

    z-index: 1;

    /* border-bottom: 2px solid var(--clr-mantle); */
  }

  .project-image {
    position: absolute;
    left: 0;
    top: 0;

    display: flex;
    align-items: center;
    justify-content: center;

    object-fit: cover;

    width: 100%;
    height: 100%;

    cursor: pointer;

    scale: 1.1;
    opacity: 0.8;
    filter: saturate(75%);

    object-position: bottom;

    transition-property: scale, opacity, filter;
    transition-duration: 0.25s;
    transition-timing-function: ease-out;
  }

  a.picture-link:hover > picture > .project-image {
    scale: 1.12;
    opacity: 1;
    filter: saturate(100%);
  }

  .project-title-wrapper {
    position: absolute;
    bottom: 0;

    display: grid;
    gap: 0.2rem;

    width: 100%;

    padding-inline: 1rem;
    padding-top: 1rem;
    padding-bottom: 1rem;

    z-index: 1;

    backdrop-filter: blur(10px);
  }

  .project-title-wrapper::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;

    background-color: var(--clr-crust);
    z-index: -1;
    opacity: 0.8;
  }

  .title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .card-description {
    line-height: 150%;
    margin-bottom: auto;

    padding-block: 1rem;
  }

  ul.tags-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.75rem 0.5rem;

    list-style: none;
    padding: 0;
    margin: 0;
    margin-bottom: 1rem;
  }

  ul.links-list {
    display: flex;
    align-items: center;
    flex-direction: row;
    gap: 1rem;

    list-style: none;

    padding: 0;
    margin-bottom: 0.5rem;

    width: 100%;
  }

  a.link {
    position: relative;

    display: flex;
    align-items: center;
    justify-content: center;
    /* gap: 0.6rem; */

    color: var(--clr-text);
    text-decoration: none;

    border-radius: var(--radius-circle);
    outline: 1px solid var(--clr-surface-1);

    background-color: var(--clr-surface-0);

    /* height: 2.4rem; */

    padding: 0.6rem;

    overflow: hidden;

    transition-property: color, background-color, outline;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  a.link:hover {
    outline: 1px solid var(--clr-surface-2);
    color: var(--clr-primary);
    background-color: var(--clr-surface-1);
  }

  .link-label {
    margin-right: auto;
    padding-right: 2rem;
    padding-left: 1rem;
  }

  .link-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    margin-right: auto;

    aspect-ratio: 1;

    background-color: var(--clr-base);

    height: 100%;

    transition-property: background-color, color;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
  }

  a:hover > .link-icon-wrapper {
    background-color: var(--clr-surface-0);
    color: var(--clr-primary);
  }

  .link-icon {
    font-size: 1.4rem;
  }

  .tech-icon {
    position: relative;
    top: 1px;
  }

  .project-link-wrapper {
    margin-left: auto;
  }
</style>

<div class='project-card'>
  {
    data.cover && (
      <div class='picture-wrapper'>
        <div class='project-title-wrapper'>
          <div class='title-wrapper'>
            <StatusDot type={data.status} />
            <Heading
              level={3}
              size='l2x'
              url={url}>
              {data.title}
            </Heading>
          </div>
          <div class='date-wrapper'>
            <DateLabel date={data.date_completed} />
          </div>
        </div>
        <a
          href={url}
          class='picture-link'>
          <Picture
            src={data.cover}
            widths={[400, 800]}
            sizes='(max-width: 800px) 100vw, 800px'
            alt={data.title}
            class='project-image'
          />
        </a>
      </div>
    )
  }

  <div class='project-info-wrapper'>
    <p class='card-description'>{data.description}</p>
    <ul class='tags-list'>
      {
        data.tags.map((tag: string) => (
          <li class='tags-list-item'>
            <Chip
              url={`/projects/tags/${tag}`}
              size='sm'>
              <span class={`tech-icon ${getIcon(tag)}`} />
              <span>{tag}</span>
            </Chip>
          </li>
        ))
      }
    </ul>
    <ul class='links-list'>
      {
        data.github_url && (
          <li class='link-list-item'>
            <a
              title='Visit GitHub repository'
              class='link'
              href={data.github_url}
              target='_blank'>
              <span class='link-icon bx bxl-github' />
              <span class='link-label visually-hidden'>GitHub</span>
            </a>
          </li>
        )
      }
      {
        data.demo_url && (
          <li class='link-list-item'>
            <a
              title='See demo'
              class='link'
              href={data.demo_url}
              target='_blank'>
              <span class='link-icon bx bxs-caret-right-circle' />
              <span class='link-label visually-hidden'>Demo</span>
            </a>
          </li>
        )
      }
      {
        data.fem_url && (
          <li class='link-list-item'>
            <a
              title='Visit Frontend Mentor challenge page'
              class='link'
              href={data.fem_url}
              target='_blank'>
              <span class='link-icon bx bxs-trophy' />
              <span class='link-label visually-hidden'>Challenge</span>
            </a>
          </li>
        )
      }
      <div class='project-link-wrapper'>
        <ReadMoreLink url={url}>View Project</ReadMoreLink>
      </div>
    </ul>
  </div>
</div>
