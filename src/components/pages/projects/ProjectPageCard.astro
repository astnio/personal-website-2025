---
interface Props {
  title: string;
  description: string;
  url: string;
  disabled?: boolean;
}

const { title, description, url, disabled = false } = Astro.props;
---

<style>
  .card-wrapper {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;

    width: 100%;

    background-color: var(--clr-crust);
    outline: 1px solid var(--clr-surface-0);

    border-radius: var(--radius-surface);

    padding: 1rem;
  }
</style>

<div class='card-wrapper'>
  <h3>{title}</h3>
  <p></p>
  {description}
  {disabled ? <p>Coming Soon!</p> : <a href={url}>View {title} Projects</a>}
</div>
