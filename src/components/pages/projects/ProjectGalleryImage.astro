---
import { Image } from 'astro:assets';

interface Props {
  image: any;
  active: boolean;
  id: string;
}

const { image, active, id } = Astro.props;
---

<style>
  .project-image-wrapper {
    position: absolute;

    width: 100%;
    height: 100%;

    object-fit: contain;

    /* transition-property: transform, visibility;
    transition-duration: 0;
    transition-timing-function: ease-out; */
  }

  .project-image {
    width: 100%;
    height: 100%;

    object-fit: contain;
  }

  [data-active='false'] {
    /* visibility: hidden; */
    /* transform: translateX(-100%); */
  }

  [data-active='true'] {
    /* visibility: visible; */
    /* transform: translateX(0%); */
  }

  .image-caption {
    isolation: isolate;

    position: absolute;
    right: 0;
    bottom: 1rem;

    padding: 1rem;

    border-radius: var(--radius-surface) 0 0 var(--radius-surface);

    color: var(--clr-subtext-1);
    font-weight: 300;

    overflow: hidden;

    backdrop-filter: blur(10px);
  }

  .image-caption::before {
    content: '';

    position: absolute;
    left: 0;
    top: 0;

    width: 100%;
    height: 100%;

    background-color: var(--clr-mantle);

    opacity: 0.4;

    z-index: -1;
  }

  .image-caption-label {
    padding-right: 1rem;
  }
</style>

<div
  class='project-image-wrapper'
  data-active={active}
  id={id}>
  <Image
    class={'project-image'}
    alt={image.alt}
    src={image.src}
  />
  <p class='image-caption'>
    <span class='image-caption-label'>{image.alt}</span>
  </p>
</div>
