---
import { Picture } from 'astro:assets';

import profilePicture from '@assets/images/site/index/profile-pic.png';
---

<style>
  .image-frame {
    display: flex;
    align-items: center;
    justify-content: center;

    border: 0.3rem solid var(--clr-base);
    border-radius: var(--radius-circle);

    background-color: var(--clr-surface-0);

    overflow: hidden;
  }

  a {
    border-radius: 999px;

    transition-property: scale, filter, box-shadow;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
  }

  a:hover {
    filter: brightness(110%);
    scale: 1.02;
    box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.25);
  }

  .profile-image {
    display: flex;
    align-items: center;
    justify-content: center;

    --image-size: 9.8rem;

    width: var(--image-size);
    height: var(--image-size);
  }
</style>

<a href='/about'>
  <div class='image-frame'>
    <Picture
      src={profilePicture}
      formats={['webp', 'png']}
      alt='Austin Hagel'
      loading='eager'
      decoding='async'
      width='256'
      class='profile-image'
    />
  </div>
</a>
