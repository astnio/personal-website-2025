---
const { url, label, iconClass, newTab = true } = Astro.props;
---

<style>
  :root {
    --spacing: 1.8rem;
  }

  a {
    position: relative;

    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;

    background-color: var(--clr-base);

    color: var(--clr-text);
    text-decoration: none;

    border-radius: var(--radius-input);
    outline: 1px solid var(--clr-surface-0);

    height: 2.4rem;
    min-width: 16rem;

    overflow: hidden;

    transition-property: color, background-color, outline;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  a:hover {
    outline: 1px solid var(--clr-primary);
    color: var(--clr-primary);
    background-color: var(--clr-surface-0);
  }

  .link-label {
    position: relative;
    top: 0.05rem;

    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;

    padding: 0;

    margin: auto;
    margin-left: 1rem;
    padding-right: var(--spacing);

    font-size: 1rem;
    font-weight: 500;

    transition-property: transform;
    transition-duration: 0.35s;
    transition-timing-function: ease-out;
  }

  a:hover > .link-label {
    transform: translateX(-1rem);
  }

  .link-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    margin-right: auto;

    aspect-ratio: 1;

    background-color: var(--clr-mantle);

    height: 100%;

    transition-property: background-color, color;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
  }

  a:hover > .link-icon-wrapper {
    background-color: var(--clr-base);
    color: var(--clr-primary);
  }

  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 1.4rem;

    height: 100%;
  }

  .link-label::after {
    content: '\00BB';

    position: absolute;
    right: -2rem;
    bottom: 0.2rem;

    display: flex;
    align-items: center;
    justify-content: center;

    aspect-ratio: 1;

    height: 100%;

    opacity: 0;

    font-size: 2rem;
    color: var(--clr-primary);

    transition-property: opacity, right;
    transition-duration: 0.35s;
    transition-timing-function: ease-out;
  }

  a:hover > .link-label::after {
    opacity: 1;
    right: 0;
  }

  .external-link-icon {
    color: var(--clr-subtext-0);
    opacity: 0.4;
    font-size: 0.8rem;
    margin-right: 0.5ch;
  }

  @media screen and (min-width: 768px) {
    a {
      flex-shrink: 1;
      min-width: fit-content;
    }
  }
</style>

<a
  class='hero-link'
  href={url}
  target={newTab ? `_blank` : ''}>
  {
    iconClass && (
      <div class='link-icon-wrapper'>
        <span class={`link-icon ${iconClass}`} />
      </div>
    )
  }
  <span class='link-label'>
    <!-- {newTab && <span class='external-link-icon bx bx-link-external' />} -->
    {label}
  </span>
</a>
