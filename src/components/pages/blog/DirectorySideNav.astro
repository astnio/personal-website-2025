---
const { title, url, iconClass } = Astro.props;
---

<style>
  .blog-nav-list {
    display: flex;
    gap: 1rem;
  }

  .blog-nav-list-title {
    display: flex;
    align-items: center;
    justify-content: start;

    gap: 0.6rem;

    font-weight: 500;

    background-color: var(--clr-surface-0);

    width: 100%;
    height: 2.8rem;

    overflow: hidden;

    border: 1px solid;
    border-color: var(--clr-surface-2);
    border-radius: var(--radius-surface);

    transition-property: background-color, color, border-color;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  .blog-nav-list-title:hover {
    background-color: var(--clr-surface-2);
    /* color: var(--clr-primary); */
    border-color: var(--clr-primary);
  }

  .blog-nav-list-title:hover > .blog-nav-list-title-icon-wrapper {
    background-color: var(--clr-base);
    color: var(--clr-primary);
  }

  .blog-nav-list-title-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    aspect-ratio: 1;
    height: 100%;

    background-color: var(--clr-mantle);
  }

  .blog-nav-list-title-icon {
    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 1.4rem;
  }

  .blog-nav-list-title-label {
    display: flex;
    align-items: center;
    justify-content: center;

    margin-left: 0.2rem;
  }

  .blog-nav-sublist {
    padding-inline: 1rem;
    padding-block: 1rem;

    font-size: 1rem;
  }
</style>

<div>
  <a
    href={url}
    class='blog-nav-list-title'>
    <span class='blog-nav-list-title-icon-wrapper'>
      <span class=`blog-nav-list-title-icon ${iconClass}`></span>
    </span>
    <span class='blog-nav-list-title-label'>{title}</span>
  </a>
  <slot />
</div>
