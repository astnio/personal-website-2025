---
import Chip from '@components/interface/Chip.astro';
import Tag from '@components/interface/Tag.astro';

type Props = {
  title: string;
  url: string;
  iconClass: string;
  listType: 'topics' | 'categories' | 'tags';
  list: any[];
};

const { title, url, iconClass, listType, list } = Astro.props;
---

<style>
  /* *** General *** */
  a {
    text-decoration: none;
  }

  ul {
    display: flex;
    flex-direction: column;

    padding: 0;

    list-style: none;
  }

  li {
    display: flex;

    padding: 0;
  }

  .blog-nav-sublist-wrapper {
    display: flex;
    flex-direction: column;
    align-items: start;

    background-color: var(--clr-base);
    width: 100%;

    border-radius: var(--radius-surface);
    /* outline: 2px solid var(--clr-surface-0); */

    overflow: hidden;
  }

  .blog-nav-list {
    display: flex;
    gap: 1rem;
  }

  .blog-nav-list-title {
    display: flex;
    align-items: center;
    justify-content: start;

    gap: 0.6rem;

    font-weight: 500;

    background-color: var(--clr-surface-0);

    width: 100%;
    height: 2.8rem;

    overflow: hidden;

    border: 1px solid;
    border-color: var(--clr-surface-2);
    border-radius: var(--radius-surface) var(--radius-surface) 0 0;

    transition-property: background-color, color, border-color;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  .blog-nav-list-title:hover {
    background-color: var(--clr-surface-1);
    color: var(--clr-primary);
    border-color: var(--clr-primary);
  }

  .blog-nav-list-title:hover > .blog-nav-list-title-icon-wrapper {
    background-color: var(--clr-primary);
    color: var(--clr-base);
  }

  .blog-nav-list-title-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    aspect-ratio: 1;
    height: 100%;

    background-color: var(--clr-mantle);

    transition-property: background-color, color, border-color;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  .blog-nav-list-title-icon {
    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 1.4rem;
  }

  .blog-nav-list-title-label {
    display: flex;
    align-items: center;
    justify-content: center;

    margin-left: 0.2rem;
  }

  .blog-nav-sublist {
    padding-inline: 1rem;
    padding-block: 1rem;

    font-size: 1rem;
  }

  /*** Taxonomy Lists ***/

  .categories-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.5rem 0.5rem;
  }

  .tags-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.45rem 0.4rem;
  }
</style>

<div class='blog-nav-sublist-wrapper'>
  <a
    href={url}
    class='blog-nav-list-title'>
    <span class='blog-nav-list-title-icon-wrapper'>
      <span class=`blog-nav-list-title-icon ${iconClass}`></span>
    </span>
    <span class='blog-nav-list-title-label'>{title}</span>
  </a>
  <ul class=`blog-nav-sublist ${listType}-list`>
    {
      list.map((item: any) => (
        <li>
          {listType === 'topics' && (
            <a href={`/blog/${listType}/${item}`}>{item}</a>
          )}
          {listType === 'categories' && (
            <Chip url={`/blog/${listType}/${item}`}>{item}</Chip>
          )}
          {listType === 'tags' && (
            <Tag url={`/blog/${listType}/${item}`}>{item}</Tag>
          )}
        </li>
      ))
    }
  </ul>
</div>
