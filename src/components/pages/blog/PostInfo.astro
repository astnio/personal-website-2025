---
import Chip from '@components/interface/Chip.astro';
import DateLabel from '@components/interface/DateLabel.astro';
import { calculateReadingTime } from '@scripts/utils/readingTime';

const { post } = Astro.props;
const timeRead = calculateReadingTime(post.body);
---

<style>
  .post-info {
    display: grid;
    grid-template-columns: auto 1fr;
    justify-content: space-between;
    align-items: center;
    gap: 1rem 1rem;

    font-size: 0.9rem;

    padding-top: 1rem;
    padding-bottom: 1rem;
    /* margin-bottom: 0.2rem; */
  }

  .read-minutes {
    grid-row-start: 2;

    justify-self: start;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.2ch;

    color: var(--clr-subtext-0);

    padding: 0;
    margin: 0;
  }

  .time-read-icon {
    font-size: 1.2rem;
    margin-right: 0.25rem;
  }

  .published-date {
    grid-row-start: 2;
  }

  @media screen and (min-width: 786px) {
    .post-info {
      display: grid;
      grid-template-columns: auto 1fr 1fr;
      grid-template-rows: 1fr;
    }

    .read-minutes {
      grid-column-start: 2;
      grid-row-start: 1;
      justify-self: start;
    }

    .published-date {
      grid-column-start: 3;
      grid-row-start: 1;
    }
  }
</style>

<div class='post-info'>
  <Chip url={`/blog/categories/${post.data.category}`}>
    {post.data.category}
  </Chip>
  <p class='read-minutes'>
    <span class='time-read-icon bx bxs-timer'></span>
    <span>
      <span>{timeRead}</span>
      <span> minute read</span>
    </span>
  </p>
  <DateLabel date={post.data.date_published} />
</div>
