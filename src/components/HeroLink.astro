---
const { url, label, iconClass, newTab = 'true' } = Astro.props;
---

<style>
  :root {
    --spacing: 1.8rem;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;

    text-decoration: none;

    color: var(--clr-text);

    background-color: var(--clr-surface-1);

    border-radius: 1pt;
    outline: 1px solid var(--clr-surface-2);

    height: 2.4rem;
    min-width: 16rem;


    transition-property: color, background-color, outline;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  a:hover {
    background-color: var(--clr-overlay-0);
    outline: 1px solid var(--clr-overlay-2);
  }



  .link-label {
    position: relative;
    top: 0.05rem;

    display: flex;
    align-items: center;
    justify-content: center;

    padding: 0;

    margin: auto;
    margin-left: 1rem;
    padding-right: var(--spacing);


    font-size: 1rem;
  }

  .link-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    margin-right: auto;

    aspect-ratio: 1;

    background-color: var(--clr-surface-0);

    height: 100%;

    transition-property: background-color;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
  }

  a:hover > .link-icon-wrapper {
    background-color: var(--clr-surface-1);
  }

  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 1.4rem;


    height: 100%;
  }
</style>

<a href={url} target={newTab ? `_blank` : ''}>
  {iconClass && <div class="link-icon-wrapper"><span class=`link-icon ${iconClass}`></span></div> }
  <span class="link-label">{label}</span>  
</a>
