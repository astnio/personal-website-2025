<style>
  button.menu-btn {
    position: absolute;
    right: 0;
    top: 0;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    border: none;
    background-color: transparent;

    width: 28px;
    height: 18px;

    padding: 0;
    margin-inline: 1rem;
    margin-block: 1.4rem;

    cursor: pointer;

    z-index: 100;
  }

  .menu-btn:hover > .menu-btn-line {
    background-color: var(--clr-primary);
  }

  .menu-btn-line {
    content: '';

    width: 100%;
    height: 2px;

    background-color: var(--clr-text);

    transition-property: background-color;
    transition-duration: 0.15s;
    transition-timing-function: easo;
  }

  @media screen and (min-width: 768px) {
    .menu-btn,
    #btn-open-nav-drawer {
      display: none;
    }
  }
</style>

<button
  class='menu-btn'
  id='btn-open-nav-drawer'
  aria-label='Open Navigation Menu'
  data-action=''>
  <span class='menu-btn-line-1 menu-btn-line'></span>
  <span class='menu-btn-line-2 menu-btn-line'></span>
  <span class='menu-btn-line-3 menu-btn-line'></span>
  <span class='visually-hidden'>Open Navigation Menu</span>
</button>

<script src='../scripts/openDrawerButton.ts'></script>
