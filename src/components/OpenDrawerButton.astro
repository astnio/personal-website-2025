<style>
  button.menu-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    border: none;
    background-color: transparent;

    width: 2rem;
    height: 1.45rem;

    padding: 0;
    margin: 0;

    cursor: pointer;

    z-index: 1500;
  }

  .menu-btn:hover > .menu-btn-line {
    background-color: var(--clr-primary);
  }

  .menu-btn-line {
    content: '';

    width: 100%;
    height: 0.2rem;

    background-color: var(--clr-text);

    transition-property: background-color;
    transition-duration: 0.15s;
    transition-timing-function: easo;
  }
</style>

<button
  class='menu-btn'
  id='btn-open-nav-drawer'
  aria-label='Open Navigation Menu'>
  <span class='menu-btn-line-1 menu-btn-line'></span>
  <span class='menu-btn-line-2 menu-btn-line'></span>
  <span class='menu-btn-line-3 menu-btn-line'></span>
  <span class='visually-hidden'>Open Navigation Menu</span>
</button>

<script src='../scripts/openDrawerButton.ts'></script>
