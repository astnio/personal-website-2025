---
import CustomizationMenu from './CustomizationMenu.astro';

function formatDateTime(date: Date): string {
  const months: string[] = [
    'January',
    'February',
    'March',
    'April',
    'May',
    'June',
    'July',
    'August',
    'September',
    'October',
    'November',
    'December',
  ];

  const month: string = months[date.getMonth()];
  const day: number = date.getDate();
  const year: number = date.getFullYear();
  const hours: number = date.getHours();
  const minutes: string = String(date.getMinutes()).padStart(2, '0');
  const period: string = hours >= 12 ? 'pm' : 'am';
  const hour12: number = hours % 12 || 12;

  const ordinal = (day: number): string => {
    if (day > 3 && day < 21) return 'th';
    switch (day % 10) {
      case 1:
        return 'st';
      case 2:
        return 'nd';
      case 3:
        return 'rd';
      default:
        return 'th';
    }
  };

  return `${month} ${day}${ordinal(day)}, ${year} at ${hour12}:${minutes}${period}`;
}

const currentYear = new Date().getFullYear();
const lastBuildDate = formatDateTime(new Date());
---

<style>
  p,
  a {
    padding: 0;
    margin: 0;
  }

  footer {
    width: 100%;

    background-color: var(--clr-mantle);

    margin-top: auto;
    padding-block: 1rem;

    border-top: 1px solid var(--clr-surface-0);
  }

  footer section {
    flex-direction: column;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    padding-inline: 1rem;
  }

  .copyright-paragraph {
    display: flex;
    align-items: center;
    gap: 0.6ch;
  }

  .build-date-paragraph {
    color: var(--clr-subtext-1);
    font-size: 0.85rem;
    font-style: italic;
  }

  .credits-link {
    font-weight: 600;
    color: var(--clr-primary);
    max-width: fit-content;
    opacity: 1;

    transition-property: opacity;
    transition-duration: 0.1s;
    transition-timing-function: ease-out;
  }

  .credits-link:hover {
    opacity: 0.9;
  }

  @media screen and (min-width: 768px) {
    .footer-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: end;
      justify-content: space-between;
      gap: 1rem;

      padding-block: 1rem;
    }

    .customization-menu-wrapper {
      grid-column-start: 2;
      justify-self: end;
      align-self: flex-start;
    }

    .credits-link {
      justify-self: end;
    }

    .copyright-paragraph {
      grid-column-start: 1;
      grid-row-start: 1;

      align-self: flex-start;
    }
  }
</style>

<footer>
  <div class='footer-content max-width'>
    <div class='customization-menu-wrapper'>
      <CustomizationMenu
        id='footer'
        inDrawer='false'
      />
    </div>

    <p class='copyright-paragraph'>
      <span class='visually-hidden'>&#169;</span>
      <span class='bx bxs-copyright'></span>
      <span>2021 &#45;</span>
      <span id='footer-copyright-current-year'>
        {currentYear}
      </span>
      <span>Austin Hagel</span>
    </p>

    <p class='build-date-paragraph'>
      <span class='build-date-title'>Last build - </span>
      <span class='build-date'>{lastBuildDate}</span>
    </p>

    <a
      class='credits-link'
      href='/credits'
      >Credits</a
    >
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Below is setting the year to the most current year automatically.
    //
    // I am using this because the code in the frontmatter will only show
    // the current year from the last time the project was built. That is
    // fine as the default, however in the case I do not rebuild the project
    // for over a year, then this script will keep it up to date.

    const currentYearLabel = document.getElementById(
      'footer-copyright-current-year'
    );
    const currentYear = new Date().getFullYear();

    currentYearLabel!.innerText = String(currentYear);
  });
</script>
