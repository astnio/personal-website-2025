---
const { date, className } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric',
});
---

<style>
  time {
    display: flex;
    align-items: center;
    justify-content: start;
    gap: 0.4rem;

    font-size: 1rem;
    color: var(--clr-text);
    font-weight: 600;
  }

  .date-icon {
    font-size: 1.2rem;
    margin-right: 0.25rem;
  }
</style>

<time
  datetime={date}
  class={className}>
  <span class='date-icon bx bxs-calendar-alt'></span>
  <span>{formattedDate}</span>
</time>
