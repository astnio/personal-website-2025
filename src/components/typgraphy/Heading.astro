---
type Props = {
  type: 'heading' | 'title' | 'subtitle';
  level: 1 | 2 | 3 | 4 | 5 | 6;
  className: string;
};

const { type, level, className } = Astro.props;

const HeadingElement =
  `h${level}` as const satisfies keyof HTMLElementTagNameMap;
---

<HeadingElement
  class={`${className} test`}
  data-type={type}>
  <slot />
</HeadingElement>
