---
import LinkListItem from './LinkListItem.astro';

const links = [
  {
    url: 'https://astn.sh/linkedin',
    label: 'LinkedIn',
    iconName: 'linkedin-square',
    iconColor: 'white',
    iconType: 'logo',
  },
  {
    url: 'https://astn.sh/frontend-mentor',
    label: 'Frontend Mentor',
    iconName: 'dashboard',
    iconColor: 'white',
    iconType: 'solid',
  },
  {
    url: '/blog',
    label: 'Blog',
    iconName: 'message-square-dots',
    iconColor: 'white',
  },
  {
    url: 'https://astn.sh/github',
    label: 'Github',
    iconName: 'github',
    iconColor: 'white',
    iconType: 'logo',
  },
  {
    url: '/projects',
    label: 'Projects',
    iconName: 'code-block',
    iconColor: 'white',
  },
];
---

<style>
  ul {
    display: flex;
    align-items: center;
    justify-content: start;
    flex-wrap: wrap;
    gap: 1.2rem;

    list-style: none;

    padding: 0;
  }
</style>

<nav>
  <ul>
    {
      links.map((link) => (
        <li>
          <LinkListItem
            url={link.url}
            label={link.label}
            iconName={link.iconName}
            iconColor={link.iconColor}
            iconType={link.iconType}
          />
        </li>
      ))
    }
  </ul>
</nav>
