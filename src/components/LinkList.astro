---
import LinkListItem from './LinkListItem.astro';

const externalLinks = [
  {
    url: 'https://astn.sh/linkedin',
    label: 'LinkedIn',
    iconClass: 'bx bxl-linkedin-square',
  },
  {
    url: 'https://astn.sh/frontend-mentor',
    label: 'Frontend Mentor',
    iconClass: 'bx bxs-dashboard',
  },
  {
    url: 'https://astn.sh/github',
    label: 'Github',
    iconClass: 'bx bxl-github',
  },
];

const internalLinks = [
  {
    url: '/about',
    label: 'About',
    iconClass: 'bx bxs-detail',
  },
  {
    url: '/blog',
    label: 'Blog',
    iconClass: 'bx bxs-message-square-dots',
  },
  {
    url: '/projects',
    label: 'Projects',
    iconClass: 'bx bx-code-block',
  },
];
---

<style>
  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 100%;
  }

  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.6rem;

    width: 100%;

    list-style: none;

    padding: 0;
  }

  li {
    width: 100%;
  }

  .links-nav {
    gap: 2rem;
  }

  .link-list-wrapper {
    width: 100%;
  }

  .link-list-title-wrapper {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr);
  }

  .link-list-title-hr {
    align-self: center;

    width: 100%;
    height: 1px;

    background-color: var(--clr-surface-200);
  }

  .link-list-title {
    text-align: center;
    justify-self: center;
    margin: 0;

    padding-inline: 1rem;

    font-size: 1.2rem;
    font-weight: 600;

    width: 100%;
  }
</style>

<nav class='links-nav'>
  <div class='link-list-wrapper'>
    <div class='link-list-title-wrapper'>
      <div class='link-list-title-hr'></div>
      <h3 class='link-list-title'>What I Do</h3>
      <div class='link-list-title-hr'></div>
    </div>
    <ul>
      {
        internalLinks.map((link) => (
          <li>
            <LinkListItem
              url={link.url}
              label={link.label}
              iconClass={link.iconClass}
              newTab={false}
            />
          </li>
        ))
      }
    </ul>
  </div>

  <div class='link-list-wrapper'>
    <div class='link-list-title-wrapper'>
      <div class='link-list-title-hr'></div>
      <h3 class='link-list-title'>Where I Am</h3>
      <div class='link-list-title-hr'></div>
    </div>
    <ul>
      {
        externalLinks.map((link) => (
          <li>
            <LinkListItem
              url={link.url}
              label={link.label}
              iconClass={link.iconClass}
            />
          </li>
        ))
      }
    </ul>
  </div>
</nav>
