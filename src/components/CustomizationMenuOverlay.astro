---
interface Props {
  inDrawer: boolean;
}

const { inDrawer } = Astro.props;
---

<style>
  .customization-menu-overlay {
    content: '';
    position: fixed;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    z-index: 100;

    background-color: var(--clr-crust-trans-60);

    transition-property: opacity, visibility, background-color;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
  }

  .customization-menu-overlay[data-active='false'] {
    visibility: hidden;
    pointer-events: none;
    opacity: 0;
  }

  .customization-menu-overlay[data-active='true'] {
    visibility: visible;
    pointer-events: all;
    opacity: 1;
  }

  .customization-menu-overlay[data-in-drawer='false'] {
    display: none;
  }

  @media screen and (min-width: 768px) {
    .customization-menu-overlay[data-in-drawer='false'] {
      display: inline-block;
    }
  }
</style>

<div
  class='customization-menu-overlay'
  data-active='false'
  data-in-drawer={inDrawer}>
</div>
