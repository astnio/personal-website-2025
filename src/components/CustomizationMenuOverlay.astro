<style>
  .customization-menu-overlay {
    content: '';
    position: fixed;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    z-index: 100;

    background-color: var(--clr-crust-trans-60);

    transition-property: opacity, visibility, background-color;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
  }

  .customization-menu-overlay[data-active='false'] {
    visibility: hidden;
    pointer-events: none;
    opacity: 0;
  }

  .customization-menu-overlay[data-active='true'] {
    visibility: visible;
    pointer-events: all;
    opacity: 1;
  }
</style>

