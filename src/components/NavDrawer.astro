---
import ContactButton from './ContactButton.astro';
import LightSwitch from './LightSwitch.astro';
import Logo from './Logo.astro';
import NavLinks from './NavLinks.astro';
---

<style>
  #nav-drawer {
    isolation: isolate;

    position: fixed;
    left: 0;
    top: 0;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 16rem;
    max-width: 80vw;

    height: 100dvh;

    transform: translateY(0%);

    border-left: 1px solid var(--clr-base);

    box-shadow: -12px 0px 16px rgba(0, 0, 0, 0.1);

    overflow: hidden;

    visibility: visible;

    transition-property: transform, visibility;
    transition-duration: 0.25s;
    transition-timing-function: ease-in-out;

    z-index: 10;
  }

  #nav-drawer::before {
    content: '';

    position: absolute;
    left: 0;
    top: 0;

    width: 100%;
    height: 100%;

    /* backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px); */

    /* background-color: var(--clr-base-trans-60); */
    background-color: var(--clr-mantle);

    z-index: -1;
  }

  .nav-drawer-content {
    display: flex;
    flex-direction: column;

    height: 100%;
    width: 100%;

    padding-bottom: 4rem;
    padding-inline: 2rem;
  }

  #overlay {
    content: '';
    position: fixed;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    background-color: var(--clr-crust-trans-60);
    backdrop-filter: blur(6px);

    z-index: 9;

    opacity: 1;
    visibility: visible;
    pointer-events: all;

    transition-property: opacity, visibility;
    transition-duration: 0.25s;
    transition-timing-function: ease-out;
  }

  #nav-drawer[data-active='false'] {
    transform: translateY(-100%);
    visibility: hidden;
  }

  #overlay[data-active='false'] {
    opacity: 0;
    pointer-events: none;
    visibility: hidden;
  }

  #overlay[data-active='true'] {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 100%;

    background-color: var(--clr-base);
  }

  .light-toggle-wrapper {
    display: block;

    scale: 1.2;

    padding-left: 2rem;
    margin-right: auto;

    margin-bottom: 2rem;
  }

  @media screen and (min-width: 768px) {
    #nav-drawer {
      display: none;
    }

    #overlay {
      display: none;
    }
  }
</style>

<aside
  data-active='false'
  id='nav-drawer'
  transition:animate='none'>
  <!-- <div class='logo-wrapper'>
    <Logo inDrawer='true' />
  </div> -->
  <div class='nav-drawer-content'>
    <NavLinks />
    <ContactButton inDrawer='true' />
  </div>
  <div class='light-toggle-wrapper'>
    <LightSwitch id='drawer' />
  </div>
</aside>

<div
  data-active='false'
  id='overlay'
  aria-label='Close Navigation Menu'
  role='button'
  tabindex='0'>
</div>

<script src='../scripts/navDrawer.ts'></script>
