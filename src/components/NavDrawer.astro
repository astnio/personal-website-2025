<style>
  #nav-drawer {
    isolation: isolate;

    position: absolute;
    right: 0;
    top: 0;

    width: 24rem;
    max-width: 80vw;

    height: 100dvh;

    transform: translateX(0%);

    z-index: 10;

    overflow: hidden;

    transition-property: transform;
    transition-duration: 0.15s;
    transition-timing-function: ease-in-out;
  }

  #nav-drawer::before {
    content: '';

    position: absolute;
    left: 0;
    top: 0;

    width: 100%;
    height: 100%;

    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);

    background-color: var(--clr-base-trans-60);

    border-left: 1px solid var(--clr-surface-0);
  }

  #overlay {
    content: '';
    position: fixed;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    background-color: var(--clr-crust-trans-60);
    backdrop-filter: blur(6px);

    z-index: 9;
  }

  #nav-drawer[data-active='false'] {
    transform: translateX(100%);
  }

  #overlay[data-active='false'] {
    display: none;
  }
</style>

<div
  data-active='true'
  id='overlay'>
</div>
<div
  data-active='true'
  id='nav-drawer'>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const drawerOverlay = document.getElementById('overlay');
    const navDrawer = document.getElementById('nav-drawer');

    drawerOverlay?.addEventListener('click', () => {
      console.log('click');
      navDrawer?.setAttribute('data-active', 'false');
      drawerOverlay.setAttribute('data-active', 'false');
    });
  });
</script>
