<style>
  .menu-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;

    border: none;
    background-color: transparent;

    width: 2rem;
    height: 1.45rem;

    padding: 0;
    margin: 0;

    cursor: pointer;
  }

  .menu-btn:hover > .menu-btn-line {
    background-color: var(--clr-primary);
  }

  .menu-btn-line {
    content: '';

    width: 100%;
    height: 0.2rem;

    background-color: var(--clr-text);

    transition-property: background-color;
    transition-duration: 0.15s;
    transition-timing-function: easo;
  }
</style>

<button class='menu-btn'>
  <div class='menu-btn-line-1 menu-btn-line'></div>
  <div class='menu-btn-line-2 menu-btn-line'></div>
  <div class='menu-btn-line-3 menu-btn-line'></div>
</button>
