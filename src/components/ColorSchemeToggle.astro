  .light-switch-container {
    display: flex;
    align-items: center;
    justify-content: center;

    gap: 0.4rem;

    margin-left: auto;
  }

  .switch {
    position: relative;
    display: inline-block;

    width: 3.4rem;
    height: 1.8rem;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    inset: 0;
    background-color: var(--clr-mantle);
    transition: 0.1s ease-out;

    outline: 2px solid var(--clr-surface-0);
  }

  .slider:before {
    position: absolute;
    content: '';

    --slider-size: 1.25rem;

    height: var(--slider-size);
    width: var(--slider-size);

    left: 0.4rem;
    bottom: 0.3rem;

    background-color: var(--clr-yellow);
    transition: 0.1s ease-out;
  }

  input:checked + .slider {
    background-color: var(--clr-mantle);
  }

  input:focus + .slider,
  input:hover + .slider {
    outline: 2px solid var(--clr-primary);
  }

  input:checked + .slider:before {
    transform: translateX(1.4rem);

    background-color: var(--clr-primary);
  }

  .slider.round {
    border-radius: 999px;
  }

  .slider.round:before {
    border-radius: 50%;
  }
</style>

<div class='light-switch-container'>
  <p><span id='light-toggle-theme-label'></span> Theme</p>
  <span class='light-switch-icon light-switch-icon-light'></span>
  <label class='switch'>
    <input
      type='checkbox'
      id='chk-light-toggle'
      checked
    />
    <span class='slider round'></span>
  </label>
</div>

<script src='../scripts/toggleColorScheme.js'></script>
