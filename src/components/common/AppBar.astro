---
import SearchInput from '@components/interface/SearchInput.astro';
import Logo from './Logo.astro';
import NavLinks from './NavLinks.astro';
import ContactButton from './ContactButton.astro';
---

<style>
  nav#app-bar {
    isolation: isolate;

    position: fixed;
    top: 0;

    display: flex;

    width: 100%;

    height: 4rem;

    margin-bottom: auto;

    border-bottom: 1px solid var(--clr-surface-0);

    transition-property: top, transform;
    transition-duration: 0.4s;
    transition-timing-function: ease-in-out;

    z-index: 1;
  }

  .nav-content-wrapper::before {
    content: '';

    position: absolute;
    left: 0;
    top: 0;

    width: 100%;
    height: 100%;

    /* background-color: var(--clr-mantle-trans-60); */

    background-color: var(--clr-base);

    /* backdrop-filter: blur(12px); */

    z-index: -1;
  }

  .nav-content-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;

    padding-inline: 1rem;
    padding-block: 0.8rem;

    width: 100%;
  }

  .menu-btn-wrapper {
    display: none;
  }

  .contact-btn-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4rem;
  }

  .nav-links-wrapper {
    margin-left: 2rem;
  }

  .search-input-wrapper {
    margin-left: auto;
    margin-right: 2rem;
  }

  @media screen and (max-width: 768px) {
    .nav-links-wrapper,
    .contact-btn-wrapper {
      display: none;
    }
  }
</style>

<nav
  id='app-bar'
  transition:name='app-bar'>
  <div class='nav-content-wrapper max-width'>
    <Logo mobileView={false} />
    <div class='nav-links-wrapper'>
      <NavLinks />
    </div>
    <div class='search-input-wrapper'>
      <SearchInput
        inDrawer={false}
        mobileView={false}
      />
    </div>
    <div class='contact-btn-wrapper'>
      <ContactButton />
    </div>
  </div>
</nav>

<script src='@scripts/appBar.ts'></script>
