---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import PostDirectory from '@layouts/PostDirectory.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const uniqueTopics = [
    ...new Set(allPosts.map((post) => post.data.topic).flat()),
  ];

  return uniqueTopics.map((topic) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.topic.includes(topic)
    );
    return {
      params: { topic },
      props: { posts: filteredPosts },
    };
  });
}

const { topic } = Astro.params;
const { posts } = Astro.props;

const title = `Blog | ${topic}`;
---

<BaseLayout title={title}>
  <PostDirectory
    posts={posts}
    directoryTitle={topic}
  />
</BaseLayout>
