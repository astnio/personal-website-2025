---
import PostCard from '@/components/pages/blog/PostCard.astro';
import PostsSection from '@/components/pages/index/PostsSection.astro';
import ProjectsSection from '@/components/pages/index/ProjectsSection.astro';
import SocialLinksGroup from '@/components/pages/index/SocialLinksGroup.astro';
import ProjectCard from '@/components/pages/projects/ProjectCard.astro';
import HeroLinksGroup from '@components/pages/index/HeroLinksGroup.astro';
import ProfilePicture from '@components/pages/index/ProfilePicture.astro';
import Heading from '@components/typography/Heading.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const title = 'Austin Hagel';
---

<style>
  .hero-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    padding-inline: 1rem;

    width: 100%;

    margin-top: -2rem;

    min-height: 100dvh;
  }

  .hero-info-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: 100%;

    margin-top: 0rem;
    margin-bottom: 2rem;
  }

  .hero-paragraph {
    max-width: 74ch;
    font-size: 1rem;

    padding: 0;
    margin: 0;
  }

  .hero-link-list {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;

    margin-top: 2rem;
    margin-bottom: 4rem;
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    width: 100%;
  }

  .about-me {
    max-width: 40ch;
    text-align: justify;

    margin: 0;
    padding: 0;
  }

  hr {
    min-width: 100%;
    width: 20rem;

    border: none;

    height: 1px;

    background-color: var(--clr-text);

    margin: 0;
    padding: 0;
  }

  section.featured-projects {
    margin-top: 6rem;
    margin-bottom: 12rem;
  }

  section.featured-projects,
  section.recent-posts {
    padding-inline: 1rem;
    width: 100%;
  }

  hr.hero-hr {
    margin-top: 3rem;
    display: none;
  }

  hr.hr-short {
    display: flex;

    border-radius: var(--radius-pill);

    background-color: var(--clr-primary);

    height: 0.25rem;

    min-width: auto;
    width: 100%;
    max-width: 5rem;
  }

  hr {
    height: 1px;
    background-color: var(--clr-surface-0);
  }

  @media screen and (min-width: 1024px) {
    .hero-wrapper {
      flex-direction: column;

      width: 100%;
      margin-top: -8rem;
      margin-bottom: 0;

      min-width: 18rem;
    }

    .hero-content-wrapper {
      grid-row: 1;
      justify-self: end;

      display: grid;
      grid-template-columns: 1fr auto;

      gap: 0 1rem;

      width: 100%;
    }

    .profile-pic-wrapper {
      grid-column-start: 2;
      grid-row: span 3;
    }

    .title-wrapper {
      grid-row: 1;
      align-self: end;
    }

    .social-links-wrapper {
      grid-row: 3;
      align-self: start;
    }

    .hero-paragraph-wrapper {
      grid-row: 2;
      grid-column-start: 1;
      grid-column-end: -1;
    }

    .hero-info-wrapper {
      grid-row: 1;
      width: 100%;
      justify-self: start;

      margin-top: 2rem;
      margin-bottom: 4rem;
    }

    .about-me {
      grid-column: 0;
      grid-row: 2;

      max-width: 50ch;
      text-align: left;
    }

    hr.hero-hr {
      display: flex;
    }
  }
</style>

<BaseLayout title={title}>
  <section class='hero-wrapper max-width'>
    <div class='hero-content-wrapper'>
      <div class='profile-pic-wrapper'>
        <ProfilePicture />
      </div>
      <div class='title-wrapper'>
        <Heading
          type='title'
          level={1}
          size='l6x'>
          <span>Austin Hagel</span>
        </Heading>
        <hr class='hr-short' />
      </div>
      <p class='about-me'>
        Welcome to my website, and explore with me the intersection of code,
        design, and interactive media.
      </p>
      <div class='social-links-wrapper'>
        <SocialLinksGroup />
      </div>
    </div>

    <hr class='hero-hr' />

    <div class='hero-info-wrapper'>
      <div class='hero-link-list'>
        <HeroLinksGroup />
      </div>
    </div>
  </section>

  <section class='max-width about-section'>
    <p>hello world</p>
  </section>

  <section class='max-width recent-posts'>
    <PostsSection />
  </section>

  <section class='max-width featured-projects'>
    <ProjectsSection />
  </section>
</BaseLayout>
