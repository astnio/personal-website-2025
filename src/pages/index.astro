---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';

import profilePicture from '../images/hero_profile_image/lorelei-2-removebg.png';
import LinkList from '../components/HeroLinks.astro';
import data from '../scripts/data.json';

const aboutMeParagraph = data.aboutMeSentence;

const title = 'Austin Hagel';
---

<style>
  h1 {
    margin: 0;
    padding: 0;
  }

  .hero-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .hero-info-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .profile-image {
    border-radius: 50%;
    outline: 2px solid var(--clr-text);

    background-color: var(--clr-surface-0);

    --image-size: 256px;

    width: var(--image-size);
    height: var(--image-size);

    box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.25);
  }

  h1.hero-title {
    font-size: 2.4rem;
    font-weight: 400;
    letter-spacing: 0.02ch;

    padding: 0;
    margin: 0;

    text-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
  }

  .hero-paragraph {
    max-width: 74ch;
    font-size: 1rem;

    padding: 0;
    margin: 0;
  }

  .hero-link-list {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;

    margin-top: 2rem;
  }

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .about-me {
    max-width: 40ch;
    text-align: justify;

    margin: 0;
    padding: 0;
  }

  hr {
    min-width: 100%;
    width: 20rem;

    border: none;

    height: 1px;

    background-color: var(--clr-text);

    margin: 0;
    padding: 0;
  }

  @media screen and (min-width: 768px) {
    .hero-wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8rem;
    }

    h1.hero-title {
      font-size: 2.8rem;
    }

    .hero-content-wrapper {
      grid-row: 1;
      justify-self: end;
      margin-top: 1.8rem;
    }

    .hero-paragraph-wrapper {
      grid-row: 2;
      grid-column-start: 1;
      grid-column-end: -1;
    }

    .hero-info-wrapper {
      grid-row: 1;
      width: 20rem;
      justify-self: start;
    }

    .about-me {
      max-width: 74ch;
      text-align: left;
      margin-inline: auto;
    }
  }
</style>

<BaseLayout title={title}>
  <section class='hero-wrapper max-width'>
    <div class='hero-content-wrapper'>
      <Image
        src={profilePicture}
        alt='A photo of Austin'
        loading='lazy'
        decoding='async'
        width='256'
        class='profile-image'
      />
      <h1 class='hero-title'>Austin Hagel</h1>
    </div>

    <div class='hero-info-wrapper'>
      <div class='hero-link-list'>
        <LinkList />
      </div>
    </div>
  </section>
</BaseLayout>
