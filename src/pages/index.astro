---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';

import profilePicture from '../images/portrait_transbg_nooutline.png';
import LinkList from '../components/LinkList.astro';

const title = 'Astro';
---

<style>
  .profile-image {
    border-radius: 50%;
    border: 2px solid white;

    background-color: cornflowerblue;

    width: 16rem;
    height: 16rem;
  }
</style>

<BaseLayout title={title}>
  <section>
    <Image
      src={profilePicture}
      alt='A photo of Austin'
      loading='lazy'
      decoding='async'
      width='512'
      class='profile-image'
    />
    <h1>Austin Hagel</h1>
    <p>
      A versatile professional dedicated to delivering comprehensive and
      adaptable solutions across a range of services. Committed to excellence
      and reliability, ensuring tailored support that meets diverse needs with a
      seamless approach. Bringing a blend of creativity and technical expertise
      to foster effective results.
    </p>
    <LinkList />
  </section>
</BaseLayout>
