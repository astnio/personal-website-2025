---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';

import profilePicture from '../images/portrait_transbg_nooutline.png';
import LinkList from '../components/LinkList.astro';

const title = 'Astro';
---

<style>
  .hero-wrapper {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    gap: 6rem;

    padding-inline: 1rem;
  }

  .hero-info-wrapper {
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  .profile-image {
    border-radius: 50%;
    border: 2px solid white;

    background-color: var(--clr-surface-trans-40);

    --image-size: 18rem;

    width: var(--image-size);
    height: var(--image-size);
  }

  .hero-title {
    font-size: 3.6rem;
    font-weight: 200;
    padding: 0;
    margin: 0;
  }

  .hero-paragraph {
    max-width: 74ch;
    font-size: 1rem;

    padding: 0;
    margin: 0;
  }

  hr {
    margin-block: 1.6rem;

    border: none;

    width: 100%;
    background-color: white;
    height: 1px;
  }
</style>

<BaseLayout title={title}>
  <section class='hero-wrapper max-width'>
    <Image
      src={profilePicture}
      alt='A photo of Austin'
      loading='lazy'
      decoding='async'
      width='512'
      class='profile-image'
    />
    <div class='hero-info-wrapper'>
      <h1 class='hero-title'>Austin Hagel</h1>
      <hr />
      <p class='hero-paragraph'>
        A versatile professional dedicated to delivering comprehensive and
        adaptable solutions across a range of services. Committed to excellence
        and reliability while bringing a blend of creativity and technical
        expertise to foster effective results.
      </p>
      <div class='hero-link-list'>
        <LinkList />
      </div>
    </div>
  </section>
</BaseLayout>
