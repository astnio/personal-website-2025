---
import BaseLayout from '@/layouts/BaseLayout.astro';

/*

NOTE:

This is the page the user gets redirected to after submitting a message from the ContactDialog.astro.

*/
---

<style>
  section.main-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    min-height: 50vh;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: center;

    background-color: var(--clr-base);
    padding: 2rem;
    border-radius: var(--radius-surface);
    outline: 1px solid var(--clr-surface-0);
  }

  .contact-thanks-icon {
    font-size: 6rem;
    color: var(--clr-success);
  }

  .title {
    font-size: 2rem;

    margin-bottom: 0;
  }

  .message {
    font-size: 1.2rem;
  }

  .close-message {
    color: var(--clr-subtext-1);
    font-weight: 400;
    font-size: 0.9rem;

    background-color: var(--clr-mantle);

    padding-inline: 1rem;
    padding-block: 0.4rem;
    margin-top: 2rem;
    margin-bottom: 0;

    border-radius: var(--radius-pill);
    border: none;

    outline: 1px solid transparent;
  }
</style>

<BaseLayout
  title='Austin Hagel | Thank you for contacting!'
  enableBreadcrumb={false}>
  <section class='max-width main-section'>
    <article class='content box-shadow-2'>
      <span class='contact-thanks-icon ri-chat-check-fill'></span>
      <h2 class='title'>Your message has been successfully sent!</h2>
      <p class='message'>I will get back to you as soon as possible!</p>
      <p
        id='btn-close'
        class='close-message'>
        You can freely close this tab
      </p>
    </article>
  </section>
</BaseLayout>
