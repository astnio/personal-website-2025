---
import BaseLayout from '@/layouts/BaseLayout.astro';

/*

NOTE:

This is the page the user gets redirected to after submitting a message from the ContactDialog.astro.

*/
---

<style>
  section.main-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    min-height: 50vh;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: center;

    background-color: var(--clr-base);
    padding: 2rem;
    border-radius: var(--radius-surface);
    outline: 1px solid var(--clr-surface-0);
  }

  .contact-thanks-icon {
    font-size: 6rem;
    color: var(--clr-success);
  }

  .title {
    font-size: 2rem;

    margin-bottom: 0;
  }

  .message {
    font-size: 1.2rem;
  }

  .close-message {
    color: var(--clr-subtext-0);
    font-style: italic;
  }
</style>

<BaseLayout title='Austin Hagel | Thank you for contacting!'>
  <section class='max-width main-section'>
    <article class='content box-shadow-2'>
      <span class='contact-thanks-icon ri-chat-check-fill'></span>
      <h2 class='title'>Your message has been successfully sent!</h2>
      <p class='message'>I will get back to you as soon as possible!</p>
      <p class='close-message'>You can freely close this tab.</p>
    </article>
  </section>
</BaseLayout>
